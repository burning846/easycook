{
  "version": 2,
  "builds": [
    { 
      "src": "frontend/package.json", 
      "use": "@vercel/static-build",
      "config": { 
        "distDir": "dist" 
      }
    },
    {
      "src": "backend/vercel_app.py",
      "use": "@vercel/python"
    }
  ],
  "routes": [
    { 
      "src": "/api/(.*)", 
      "dest": "backend/vercel_app.py" 
    },
    { 
      "src": "/(.*)", 
      "dest": "frontend/dist/$1" 
    }
  ],
  "env": {
    "DOMAIN": "easyfood.burning233.top",
    "FRONTEND_URL": "https://easyfood.burning233.top",
    "API_URL": "https://easyfood.burning233.top/api"
  }
}